<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Georgetown Running Club</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container-fluid">
        <nav class="navbar fixed-top navbar-expand-lg navbar-light color-navbar">
            @Html.ActionLink("Georgetown Running Club", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="navbarNav">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { @class = "nav-item nav-link" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { @class = "nav-item nav-link" })</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle nav-item nav-link" data-toggle="dropdown" role="button" aria-expanded="false">Roster<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Roster", "Index", "Roster")</li>
                            <li>@Html.ActionLink("2019 Performance List", "PerformanceList", "Roster")</li>
                            <li>@Html.ActionLink("Club Records", "Records", "Roster")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle nav-item nav-link" data-toggle="dropdown" role="button" aria-expanded="false">Results<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Upcoming Races", "UpcomingRaces", "Events")</li>
                            <li>@Html.ActionLink("Race Results", "Results", "Events")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle nav-item nav-link" data-toggle="dropdown" role="button" aria-expanded="false">In Memoriam<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Nina May Brekelmans", "Nina", "Memoriam")</li>
                            <li>@Html.ActionLink("Lauren Woodall Roady", "Lauren", "Memoriam")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Coach Jerry", "Jerry", "Coach", new { @class = "nav-item nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { @class = "nav-item nav-link" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </nav>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Georgetown Running Club</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
